<div class="container">
    <h1>Objetos de Arte</h1>
    <div class="row">
        <table class="table table-striped">
            <caption>Faça uma controle (listagem) da quantidade de objetos emprestados por coleção, por mês e por ano.</caption>
            <thead class="table-dark">
                <tr>
                    <th>Coleção</th>
                    <th>Total</th>
                    <th>Ano</th>
                    <th>Mes</th>
                </tr>
            </thead>
            <tbody>
                {{#each object}}
                <tr>
                    <td>{{nomecolpert}}</td>
                    <td>{{count}}</td>
                    <td>{{date_part}}</td>
                    <td>{{to_char}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <canvas id="myChart" width="200" height="200"></canvas>
    <script>

        const ctx = document.getElementById('myChart').getContext('2d');
        const labels = [{{{labels}}}];
        const data = {
            labels: labels,
            datasets: [{
                label: 'Curva com os totais por coleção',
                data: [{{{data}}}],
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
        };
        const myChart = new Chart(ctx, {
            type: 'line',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</div>